<h1>Edit Customer</h1>

<form class="form-horizontal">
    <div class="form-group">
        <label for="customerName" class="col-sm-2 control-label">Customer Name</label>
        <div class="col-sm-10">
          {{input id="customerName" class="form-control" value=model.name}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button class="btn btn-primary" {{action 'saveCustomer' target="controller"}}>Save</button>
        </div>
    </div>
</form>
